---
import Github from "../icons/Github.astro";
import Badge from "./Badge.astro";

interface Props {
  title: string;
  description: string;
  webLink: string;
  imageSrc: string;
  githubLink: string;
  tags: Array<String>;
}

const { title, description, webLink, imageSrc, githubLink, tags } = Astro.props;
---

<article
  class="max-w-sm bg-white rounded-lg border border-gray-300 dark:bg-gray-800 dark:border-gray-700"
>
  <a href={webLink} target="_blanks" rel="noopener noreferrer">
    <img class="rounded-t-lg bg-cover" src={imageSrc} alt="" />
  </a>
  <div class="p-5 flex flex-col h-max justify-between min-h-72">
    <div class="flex flex-wrap gap-2 mb-2">
      {tags.map((tag) => <Badge class="border rounded">{tag}</Badge>)}
    </div>
    <a href={webLink} target="_blank" rel="noopener noreferrer">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    <div class="flex justify-between">
      <a
        href={webLink}
        rel="noopener noreferrer"
        target="_blank"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        Ver página
        <svg
          class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
      <a
        href={githubLink}
        rel="noopener noreferrer"
        target="_blank"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center border border-transparent rounded-lg hover:border-gray-300"
      >
        Ver código
        <Github class="size-5 ml-2" />
      </a>
    </div>
  </div>
</article>
