---
import CodeIcon from "../icons/Code.astro";
import ProjectCard from "./ProjectCard.astro";
const PROJECTS = [
  {
    title: "Blog dev",
    description:
      "El proyecto consiste de un blog personal que permita a los usuarios publicar, editar y gestionar art√≠culos.",
    imageSrc: "/blog-image.png",
    linkPage: "https://axel-blog-dev.netlify.app/",
    linkGithub: "https://github.com/AxelSparta/blog-vite",
    tags: ["ReactJS", "Tailwind", "NodeJS", "MongoDB", "Express"],
  },
  {
    title: "Portafolio personal",
    description:
      "Proyecto realizado para poder presentar y mostrar lo que me apasiona y dedico.",
    imageSrc: "/portfolio.png",
    linkPage: "https://axelsparta.netlify.app/",
    linkGithub: "https://github.com/AxelSparta/portfolio-astro",
    tags: ["Astro", "Tailwind"],
  },
];
---

<section class="py-12" id="projects">
  <h2
    class="text-center text-xl lg:text-2xl font-semibold my-5 flex justify-center gap-2 items-center"
  >
    <CodeIcon class="size-5 lg:size-6" />
    <span>Proyectos</span>
  </h2>
  <div class="flex justify-center flex-wrap gap-5">
    {
      PROJECTS.map(
        ({ title, description, imageSrc, tags, linkPage, linkGithub }) => (
          <ProjectCard
            title={title}
            description={description}
            imageSrc={imageSrc}
            tags={tags}
            webLink={linkPage}
            githubLink={linkGithub}
          />
        )
      )
    }
  </div>
</section>
